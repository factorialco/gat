{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ES2021", "dom"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "types": ["node"],
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist"
  },
  "include": ["**/*.ts"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
